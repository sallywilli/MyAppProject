<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"      //그리드로 구성
    android:orientation="vertical"
    android:padding="30dp"
    android:columnCount="2"
    android:rowCount="20"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:background="#FFCD12"
        android:textStyle="bold"
        android:textSize="17dp"
        android:id="@+id/update"
        android:textColor="#686868"
        android:text="업데이트"></Button>   //버튼 클릭 시 계좌 총 잔액이 합산되어 보여짐
    <TextView                               //계산된 잔액이 나타나는 부분
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="2"
        android:id="@+id/total"
        android:textColor="#000000"
        android:textSize="30dp"></TextView>     

    <ImageButton                 //은행 이미지버튼이며, 클릭 시 다른 소유자의 계좌들이 보여지는 창으로 이동됨
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_row="2"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:id="@+id/logo1"
        android:layout_margin="20dp"
        android:src="@drawable/kb"></ImageButton>
    <TextView                   //내 가상 계좌
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_column="1"
            android:layout_row="2"
        android:textColor="#000000"
            android:layout_margin="20dp"
            android:text="KB국민 12345606789101"></TextView>
    <EditText                       //잔액 입력칸
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:textColor="#000000"
        android:layout_column="1"
        android:id="@+id/money1"
        android:textSize="20dp"></EditText>

    <ImageButton         //은행 이미지버튼이며, 클릭 시 다른 소유자의 계좌들이 보여지는 창으로 이동됨
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_rowSpan="2"
        android:id="@+id/logo2"
        android:layout_margin="20dp"
        android:src="@drawable/nong"></ImageButton>
    <TextView               //내 가상 계좌
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_column="1"
        android:layout_row="4"
        android:layout_margin="20dp"
        android:textColor="#000000"
        android:text="NH농협 67685705059966"></TextView>
    <EditText               //잔액 입력칸
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_column="1"
        android:id="@+id/money2"
        android:textColor="#000000"
        android:layout_row="5"></EditText>

    <ImageButton         //은행 이미지버튼이며, 클릭 시 다른 소유자의 계좌들이 보여지는 창으로 이동됨
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_row="6"
        android:layout_rowSpan="2"
        android:layout_margin="20dp"
        android:id="@+id/logo3"
        android:src="@drawable/kakao"></ImageButton>
    <TextView               //내 가상 계좌
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_column="1"
        android:layout_row="6"
        android:layout_margin="20dp"
        android:text="카카오 33903003887766"></TextView>
    <EditText           //잔액 입력칸
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_column="1"
        android:textColor="#000000"
        android:id="@+id/money3"
        android:layout_row="7"></EditText>
</GridLayout>
