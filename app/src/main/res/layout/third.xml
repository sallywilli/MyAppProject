<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"            //설정 창
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <Button                         //버튼 클릭 시 해당 화면으로 이동
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:backgroundTint="#FFCD12"
        android:layout_weight="1"
        android:id="@+id/btn1"
        android:text="인증 및 보안"></Button>
    <Button                         //버튼 클릭 시 해당 화면으로 이동
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:backgroundTint="#FFCD12"
        android:layout_weight="1"
        android:id="@+id/btn2"
        android:text="알림"></Button>
    <Button                         //버튼 클릭 시 해당 화면으로 이동
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:backgroundTint="#FFCD12"
        android:layout_weight="1"
        android:textStyle="bold"
        android:id="@+id/btn3"
        android:text="결제 카드 추가하기"></Button>
    <Button                         //버튼 클릭 시 최신버전임을 알리는 메시지창 팝업
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:backgroundTint="#FFCD12"
        android:layout_weight="1"
        android:textStyle="bold"
        android:id="@+id/btn4"
        android:text="앱 버전"></Button>
    <Button                         //버튼 클릭 시 해당 화면으로 이동
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:backgroundTint="#FFCD12"
        android:layout_weight="1"
        android:textStyle="bold"
        android:id="@+id/btn5"
        android:text="회원 탈퇴"></Button>
    </LinearLayout>
</LinearLayout>
